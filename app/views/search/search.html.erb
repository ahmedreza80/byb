<div class="col-xs-10 col-xs-offset-1">
  <div class="row">
    <div class="col-md-12 large-searchbar">
      <%= form_for :search, url: search_path, method: :get do |f| %>
        <%= f.search_field :q, value: params[:q], placeholder: 'Search WeWrite', autofocus: true, autocomplete: 'off', onfocus: "this.value = this.value;" %>
      <% end %>
    </div>
  </div>


  <% @products.each do |product| %>
   
      <h3>
        <div class="col col-md-4 col-sm-6">
              <div class="product-grid">
                <div class="image">
                  <a href="#">
                    <img src= "<%= product.image %>" alt="<%= product.title %> 's image" class="img-fluid">
                    <span class="overlay">
                        <span class="product-details">
                          View Details
                        </span>
                    </span>
                  </a>
                </div>
                <div class="product-discription py-3">
                <h4 class="text-center"><%= link_to product.title, controller: "products", action: "show", id: product._id%></h4>
                <p class="text-center"><small><%= product.sdescription %></small></p>
                <span class="product-price">
                <p class="text-center d-inline">Price: <%= product.price %></p><i class="fa fa-heart d-inline" aria-hidden="true"></i>
                </span>
                </div>
                <div class="product-btn py-2 text-center">
                <a href="#" class="btn btn-lg " role="button" aria-pressed="true">ADD TO CART</a>
                </div>
              </div>
      </h3>
     <% end %>






